
{% extends 'base.html.twig'%}

{# {%%}<title>Destination index</title> #}

{% block body %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.nom }}</td>
                <td>{{ destination.description }}</td>
                <td>{{ destination.localisation }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_destination_show', {'id': destination.id}) }}">Show</a>
                    <a class="btn btn-warning"  href="{{ path('app_destination_edit', {'id': destination.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_destination_new') }}">Create new</a>
{% endblock %}
